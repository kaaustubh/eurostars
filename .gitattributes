# ------------------------------
# Default behavior: normalize text files
# ------------------------------
* text=auto

# ------------------------------
# OS-specific line endings
# ------------------------------
# Unix (macOS/Linux) scripts use LF
*.sh text eol=lf
*.gradle text eol=lf
*.kt text eol=lf
*.kts text eol=lf
*.java text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.properties text eol=lf
*.gitignore text eol=lf

# Windows batch files keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# ------------------------------
# Binary files (no diff or conversion)
# ------------------------------
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.jar binary
*.keystore binary
*.jks binary
*.ttf binary
*.otf binary
*.wav binary
*.mp3 binary
*.mp4 binary
*.mov binary
*.aab binary
*.apk binary
*.so binary

# ------------------------------
# IDE and build system files
# ------------------------------
# IntelliJ / Android Studio
*.iml text eol=lf
.idea/** text eol=lf

# Gradle wrappers (keep consistent)
gradlew text eol=lf
gradlew.bat text eol=crlf

# ------------------------------
# Diff settings for readability
# ------------------------------
*.java diff=java
*.kt diff=java
*.xml diff=xml
*.gradle diff=java
*.json diff=java
*.md diff=markdown
*.yml diff=java
